<!DOCTYPE html>
<html>
  <head>
    <title>DeviseExample</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', "nested_form",'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <% if user_signed_in? and current_user.is_admin? -%>
        <nav class="navbar navbar-inverse">
         <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Devise Test</a>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li><a href = "<%= destroy_user_session_path %>" data-method="delete" > <span class="glyphicon glyphicon-off"></span> Logout</a></li>
          </ul>
          
         
          
        </div>
      </nav> 
    Logged in as <strong><%= current_user.email %></strong></br>
    <%= link_to "Add Programs",new_program_path %>
    <% elsif user_signed_in? and !current_user.is_admin? -%>
        <nav class="navbar navbar-inverse">
         <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Devise Test</a>
          </div>
          
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Change Password", edit_user_registration_path %></li>
            <li><a href = "<%= destroy_user_session_path %>" data-method="delete" > <span class="glyphicon glyphicon-off"></span> Logout</a></li>
          </ul>
        </div>
      </nav>
      <p> All Programs </p>
    <%= link_to "Click here to see all programs",programs_path %>
    <div class="container">
    <% else %>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          
          <ul class="nav navbar-nav navbar-right">
            <li><a href = "<%= new_user_registration_path %>"> <span class="glyphicon glyphicon-user"></span>Sign up </a></li>
            <li><a href = "<%= new_user_session_path %>" ><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
          </ul>
        </div>
      </nav> 
    <% end %>
    
    
    
     
        <%= yield %>
        <%= render 'layouts/footer' %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </body>
      </html>
