<h2 align="center">Log in</h2>
<div class="card-block">
  <div class="row">
    <div class="col-md-6 col-md-offset-3"> 
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <label for="fname" class="col-md-4 control-label">login</label>
        <div class="col-md-8">
          <%= f.email_field :login, autofocus: true, autocomplete: "login" %>
          </div>
        </div>
    <div class="form-group row">
      <label for="fname" class="col-md-4 control-label">password</label>
      <div class="col-md-8">
        <%= f.password_field :password, autocomplete: "current-password" %></br>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-8">
        <%= f.submit "Log in" %></br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-4"></div>
      <div class="col-md-8">
        <%= recaptcha_tags %>
      </div>
    </div>

    <% end %>
 </div>
</div>
</div>