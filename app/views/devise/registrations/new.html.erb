<h2 align="center">Sign up</h2>
<div class="card-block">
  <div class="row">
    <div class="col-md-6 col-md-offset-3"> 
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <label for="fname" class="col-md-4 control-label">Name</label>
          <div class="col-md-8">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="fname" class="col-md-4 control-label">email</label>
          <div class="col-md-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="fname" class="col-md-4 control-label">password</label>
          <div class="col-md-8">
            <%= f.password_field :password, autocomplete: "new-password" %></br>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            </div>
        </div>
        <div class="form-group row">
          <label for="fname" class="col-md-4 control-label">password_confirmation</label>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %></label>
          </div>
        </div>
        <div class="form-group row">
          <label for="fname" class="col-md-4 control-label">Mobile No.</label>
          <div class="col-md-8">
            <%= f.password_field :mobile, autocomplete: "mobile" %></label>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-8">
            <%= f.submit "Sign up" %></br>
            <%= render "devise/shared/links" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-4"></div>
          <div class="col-md-8">
            <%= recaptcha_tags %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


