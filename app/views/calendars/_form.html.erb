<div class="card-block">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= nested_form_for(@calendar, remote: true) do |day_form| %>
    
      <div class="form-group row" >
        <label for="fname" class="col-md-4 control-label">Name</label><div class="col-md-8">
        <%= day_form.text_field :name %>
        </div>
       </div>
       <%= day_form.fields_for :cdays do |cday| %>
       <div class="form-group row" >
       <label for="fname" class="col-md-4 control-label">Days</label><div class="col-md-8">
         <%= cday.text_field :days %>
           </div>
           </div>
          <%= cday.link_to_remove "Remove this task"%>
         <% end %>
        
         <%= day_form.link_to_add "Add a task", :cdays %>
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-8">
            <%= day_form.submit :Submit, class: 'btn btn-success' %>
            </div>
          </div>
        </div>
         
        <% end %>
      </div>
    </div>
  </div>



